<%= form_for(@user) do |f| %>
  <%= render 'shared/err_msgs', errors: f.object.errors %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, @user.new_record? ? 'Confirmation' : 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit @user.new_record? ? "Create my account" : "Save changes", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
